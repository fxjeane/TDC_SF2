                {% else %}
                    <div id="profile_btn" class='tdcButton'
                     target="{{path("fos_user_profile_show")}}">
                        Profile
                    </div><div id="logout_btn" class='tdcButton'
                      target="{{path("fos_user_security_logout")}}">
                        Logout
