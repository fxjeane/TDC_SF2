<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>
        {% block title %}
            TDC:
            {% block titleName %}{% endblock titleName %}
        {% endblock title %}
        </title>

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block header_javascripts %}
            {% javascripts
                debug=false
                'public/js/jquery/jquery-1.6.4.min.js'
                'public/js/jquery/jquery.mousewheel.js'
                'public/js/jquery/jquery.jscrollpane.min.js'
            %}
            <script src="{{ asset_url }}" type="text/javascript"  /></script>
            {% endjavascripts %}
        {% endblock header_javascripts %}
        
        {% block stylesheets %}
            {% stylesheets  
            'public/css/jquery.jscrollpane.css'
            'public/css/TDC1/main.css'
            %}
            <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
            {% endstylesheets %}
        {% endblock %}


    <body>
