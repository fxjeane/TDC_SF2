                </div>
                <img src="{{path("tdc_front_homepage")}}../public/images/TDC1/footervseparator.png" class="footerSeparator"/ >
                <div id="rss_hldr">
                    <div class="footerBlurbTitle">@TDChannel</div>
                    <div id="tweetFeed_hldr" class="scrollPane">
                        {% render "tdcFrontEndBundle:Front:siteFeed" %}
                    </div>
