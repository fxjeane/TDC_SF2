                    <div class="socialIcon">
                        <a href="http://www.facebook.com/pages/TD-Channel/136759419761676">
                            <img src="{{path("tdc_front_homepage")}}../public/images/TDC1/FaceBook_32.png"/>
                        </a>
                    </div>
                    <div class="socialIcon">
                        <a href="https://twitter.com/TDChannel">
                            <img src="{{path("tdc_front_homepage")}}../public/images/TDC1/Twitter_32.png"/>
                        </a>
                    </div>
                    <div class="socialIcon">
                        <img src="{{path("tdc_front_homepage")}}../public/images/TDC1/Feeds_32.png"/>
                    </div>
                </div>
                <div id="loginButtons_hldr">
