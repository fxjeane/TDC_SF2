{% extends 'tdcFrontEndBundle:Default:layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets  
     debug=true
    'public/css/logedIn.css' 
    %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block titleName %}Account{% endblock %}

{% block contentArea%}
    <div id="userNavBar" class="grayGradient04" >
        <ul>
            <li linkto="{{path("fos_user_profile_edit")}}">Account</li>
            <!-- li>Activity</li>
            <li>Play Lists</li>
            <li>Notes</li -->
            <li linkto="{{path("tdc_front_catalog_list")}}">Browse</li>
        </ul>
    </div>
    <div id="userContent">
    {% block body %}{% endblock body %}
    </div>
{% endblock contentArea %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            var contentArea = $("#contentFrame");
            var navBar = $("#userNavBar");
            var userContent = $("#userContent");
            var navLinks = $("#userNavBar li");

            navBar.height(contentArea.height());
            userContent.height(contentArea.height() - 20);
            userContent.width(contentArea.width() - navBar.width() - 22);
            navLinks.first().css("border-top-width","0px");
        });
        
        $('#userNavBar ul li').click(function(event){
            var self = $(this);
            var link = self.attr("linkto")
            if (link) {
                window.location = link;
            }
        });

    </script>
{% endblock %}
