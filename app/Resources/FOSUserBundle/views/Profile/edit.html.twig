{% extends 'FOSUserBundle:Profile:layout.html.twig' %}

{% block body %}
{% form_theme form theme %}
<h1>Edit Profile</h1>
<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
    {{ form_rest(form) }}
    <div>
        <input type="submit" class="blueBtnGradient blueGradient01" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
{% endblock body %}
