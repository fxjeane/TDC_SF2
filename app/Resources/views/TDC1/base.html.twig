                </div>
                <div id="copyright">All content copyright (c) 2012 - Rudy Cortes </div>
            </div>

        </div>
    </body>

    <script>
    {% block javascript_post %}
        $(document).ready(function(){
            // button handler
            $('.tdcButton').click(function(ev){
                var src = $(this);
                var target = src.attr('target');
                if (target) document.location=target;
            });
            
            // handle menu bar
            var page = String(document.location);
            if (page.search("\/catalog") !== -1) {
                $("#catalog_mrkr").addClass("currentMenuMarker");
                $("#catalog_mrkr").toggleClass("menuMarker");
            } else if (page.search("\/faq") !== -1) {
                $("#faq_mrkr").addClass("currentMenuMarker");
                $("#faq_mrkr").toggleClass("menuMarker");
            } else if (page.search("\/qa") !== -1) {
                $("#qa_mrkr").addClass("currentMenuMarker");
                $("#qa_mrkr").toggleClass("menuMarker");
            } else if (page.search("\/about") !== -1) {
                $("#about_mrkr").addClass("currentMenuMarker");
                $("#about_mrkr").toggleClass("menuMarker");
            } else {
                $("#home_mrkr").addClass("currentMenuMarker");
                $("#home_mrkr").toggleClass("menuMarker");
            }

            // scrollpanes
            $(".scrollPane").jScrollPane();

            // randomize tag cloud
            $(".tagcloud").each(function(key,value){
                var elem = $(value);
                rand = 1 + Math.max(-0.15,Math.min(0.4,((Math.random() * 2)-1))); 
                elem.css('font-size', rand+'em');
            });

        });
    {% endblock javascript_post %}
    </script>
</html>
